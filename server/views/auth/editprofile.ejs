<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>
    <!-- user Edit page -->
<main class="container">
    <div class="row">
        <div class="offset-md-3 col-md-8"></div>
        <h1 class="mb-4"><%= title %> </h1>

        <form name="form1" class="form" method="POST">
            <div class="form-group">
                <label for="usernameTextField" class="mb-1">Username:</label>
                <input 
                    type="text" 
                    class="form-control mb-3"
                    id="usernameTextField"
                    placeholder="Enter Username"
                    name="userName"
                    value="<%-user.username%>"
                    required
                    readonly>
            </div>

            
            <div class="form-group">
                <label for="emailTextField" class="mb-1">Email:</label>
                <input 
                    type="text" 
                    class="form-control mb-3"
                    id="emailTextField"
                    placeholder="Enter email"
                    name="email" 
                    value="<%- user.email %>"
                    required
                    >
            </div>

            <div class="form-group">
                <label for="dnameTextField" class="mb-1">Display Name:</label>
                <input 
                    type="text" 
                    class="form-control mb-3"
                    id="dnameTextField"
                    placeholder="Enter display name"
                    name="displayName" 
                    value="<%- user.displayName %>"
                    required>
            </div>


            
            
            <button class="btn btn-warning mt-3" type="submit">Edit</button>
           


            <a href="/home" class="btn btn-secondary mt-3">Cancel</a>
            
            
        </form>
</main>


<%- include ../partials/bottom_nav.ejs %>  

